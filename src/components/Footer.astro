---
import Logo from './Logo.astro';
import ImageBackground from './ImageBackground.astro';
import SectionOverlay from './SectionOverlay.astro';
---

<section class="footer">
  <SectionOverlay position="bottom" />
  <ImageBackground path="/images/footer.jpg" alt="Footer Image" />
  <div class="footer__content">
    <h3 class="heading heading--section">Gracias por ser parte de nuestra historia</h3>
    <Logo color="white" />
  </div>

  <style>
    .footer {
      position: relative;
      width: 100vw;
      height: 100vh;
    }

    .footer__content {
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;
      gap: 4rem;
      width: 100%;
      height: 100%;
      padding: 4.8rem 2.4rem;

      .location__text,
      .heading {
        text-align: center;
        color: var(--white);
      }

      svg {
        width: 7.2rem;
        height: auto;
      }
    }
  </style>
</section>
