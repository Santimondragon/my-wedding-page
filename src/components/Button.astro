---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a href={href} class="button" target="_blank">
  <span class="button__text text text--italic">{text}</span>
</a>

<style>
  .button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.8rem 2.4rem;
    background-color: var(--white);
    border: none;
    border-radius: 0.8rem;
    cursor: pointer;
    font-size: 1.6rem;
    text-decoration: none;
  }

  .button__text {
    color: var(--black);
    text-decoration: none;
  }
</style>
