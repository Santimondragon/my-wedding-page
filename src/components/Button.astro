---
interface Props {
  text: string;
  color: 'black' | 'white';
  href?: string;
  onClick?: string;
  type?: 'button' | 'submit';
}

const { text, color = 'white', href, onClick, type = 'button' } = Astro.props;

if (href && onClick) {
  throw new Error('Button cannot have both href and onClick props');
}
---

{
  href ? (
    <a href={href} class={`button button--${color}`} target="_blank">
      <span class="button__text text text--italic">{text}</span>
    </a>
  ) : (
    <button class={`button button--${color}`} onclick={onClick} type={type}>
      <span class="button__text text text--italic">{text}</span>
    </button>
  )
}

<style>
  .button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.2rem 2.4rem;
    border: none;
    border-radius: 0.8rem;
    cursor: pointer;
    font-size: 1.6rem;
    text-decoration: none;
    text-align: center;
    width: fit-content;
  }

  .button--white {
    background-color: var(--white);
  }

  .button--black {
    background-color: var(--black);
  }

  .button--white .button__text {
    color: var(--black);
  }

  .button--black .button__text {
    color: var(--white);
  }

  .button__text {
    text-decoration: none;
  }
</style>
