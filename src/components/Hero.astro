---
import ImageBackground from './ImageBackground.astro';
import Logo from './Logo.astro';
---

<section class="hero">
  <ImageBackground path="/images/hero.jpg" alt="Hero Image" />
  <div class="hero__content">
    <h2 class="heading heading--section">aura<br />&<br />santi</h2>
    <Logo color="white" />
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100vw;
    height: calc(100vh - 14rem);
  }

  .hero__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    padding: 4.8rem 2.4rem;

    .heading {
      color: var(--white);
      text-align: center;
      line-height: 1em;
    }

    svg {
      width: 7.2rem;
      height: auto;
    }
  }
</style>
