  .invitation-link {
    margin-bottom: 2rem;
  }

  .link-label {
    font-size: 1.2rem;
    color: var(--gray-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 0.8rem;
